<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NeuroSpecCompanion.Views.BookAppointment.ViewAppointmentPage"
             Title="ViewAppointmentPage">
    <StackLayout Padding="20">
        <Label Text="{Binding Visit.TimeStamp, StringFormat='{}{0:MM/dd/yyyy HH:mm}'}" FontSize="24" FontAttributes="Bold"/>
        <Label Text="{Binding Visit.TherapistNotes}" FontSize="18" Margin="0,10"/>
        <Label Text="{Binding Visit.Height, StringFormat='Height: {0} cm'}" FontSize="18" Margin="0,10"/>
        <Label Text="{Binding Visit.Weight, StringFormat='Weight: {0} kg'}" FontSize="18" Margin="0,10"/>
    </StackLayout>
</ContentPage>