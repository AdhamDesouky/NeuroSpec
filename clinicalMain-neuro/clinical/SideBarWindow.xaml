<Window x:Class="clinical.SideBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clinical"
        mc:Ignorable="d"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        AllowsTransparency="True"
        Opacity="0.98"
        MinHeight="600"
        MinWidth="90"
        MaxWidth="680"
        Title="SideBarWindow" Background="Transparent">
    <Grid MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Style="{StaticResource theLinedBorder}" Margin="0 0 0 10" MouseDown="Border_MouseDown" CornerRadius="10 10 0 0 "/>
        <Border Grid.Row="1" Margin="0" Style="{StaticResource theLinedBorder}">
        <Frame Name="mainFrame"  Background="Transparent" />
        </Border>
    </Grid>
</Window>
