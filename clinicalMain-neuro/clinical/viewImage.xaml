<Window x:Class="clinical.viewImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clinical"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        Title="View Image" Height="650" Width="500">
    <Grid>
        <Border Background="{StaticResource darkerColor}" Margin="10" MinHeight="400">
            <Image Name="theImage" Source="@\..\images\hand.jpg" Margin="10" />
        </Border>
    </Grid>
</Window>
