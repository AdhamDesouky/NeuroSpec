<UserControl x:Class="clinical.userControls.MyMessageChat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Name="myMessageChat">

    <Border CornerRadius="10 0 10 10" Background="#F8F7FC" Padding="10 7" HorizontalAlignment="Right" Margin="0 5 0 0">
        <TextBlock Text="{Binding Path=Message,ElementName=myMessageChat}" FontSize="14" Foreground="{StaticResource darkerColor}" VerticalAlignment="Center" Margin="3 0 3 2"/>
    </Border>
</UserControl>